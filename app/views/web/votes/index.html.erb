<h1 class="text-center">Votes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Report</th>
      <th>User</th>
      <th>Direction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @votes.each do |vote| %>
      <tr>
        <td><%= vote.report.description %></td>
        <td><%= vote.user.username %></td>
        <td><%= vote.direction %></td>
        <td><%= link_to 'Show', web_vote_path(vote), class: "btn btn-sm btn-primary" %></td>
        <%if current_user == vote.user then%>
          <td><%= link_to 'Edit', edit_web_vote_path(vote), class: "btn btn-sm btn-primary" %></td>
          <td><%= link_to 'Destroy', web_vote_path(vote), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
        <% else%>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vote', new_web_vote_path %>
